            <div class="feature-icon-{{ section.id }}">
              {%- if block.settings.lottie_url != blank -%}
                <lord-icon
                  src="{{ block.settings.lottie_url }}"
                  trigger="loop"
                  style="width:100%;height:100%">
                </lord-icon>
