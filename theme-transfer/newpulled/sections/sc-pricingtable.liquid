<script>
document.addEventListener('DOMContentLoaded', function() {
  const checkoutButtons = document.querySelectorAll('.direct-checkout-button');

  checkoutButtons.forEach(button => {
    button.addEventListener('click', function(event) {
      event.preventDefault();

      const thisButton = this;
      const productId = thisButton.dataset.productId;
      const sellingPlanId = thisButton.dataset.sellingPlanId;

      if (!productId || !sellingPlanId) {
        console.error('Button is missing a Product or Selling Plan ID.');
        thisButton.textContent = 'Configuration Error';
        return;
      }

      thisButton.disabled = true;
      thisButton.textContent = 'Loading Checkout...';

      const cartData = {
        items: [{
          id: productId,
          quantity: 1,
          selling_plan: sellingPlanId
        }]
      };

      fetch('/cart/add.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(cartData)
      })
      .then(response => {
        if (response.ok) {
          window.location.href = '/checkout';
        } else {
          response.json().then(data => {
            console.error('Error adding item to cart:', data.description);
            thisButton.disabled = false;
            thisButton.textContent = data.description || 'Error - Try Again';
          });
        }
      })
      .catch(error => {
        console.error('Fetch Error:', error);
        thisButton.disabled = false;
        thisButton.textContent = 'Network Error';
      });
    });
  });
});
</script>
