{%- style -%}
.video-background-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 0;
}

.video-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover; /* Default for desktop */
}

@media (min-width: 992px) {
  .video-background {
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translate(-50%, -50%);
  }
}

@media (max-width: 991px) {
  .video-background {
    object-fit: {{ section.settings.video_fit_mobile | default: 'cover' }};
    {%- if section.settings.video_align_mobile == 'left' -%}
      left: 0;
      transform: translateX(0);
    {%- elsif section.settings.video_align_mobile == 'right' -%}
      left: 100%;
      transform: translateX(-100%);
    {%- else -%}
      left: 50%;
      transform: translateX(-50%);
    {%- endif -%}
  }
}

/* This makes sure content shows up above the video */
.section-{{ section.id }}.has-video-background > .section-{{- section.id -}}-settings {
  position: relative;
  z-index: 2;
}
  {{ heading_font | font_face: font_display: 'swap' }}
