<script src="{{ 'collapsible-with-image.js' | asset_url }}" defer="defer"></script>

{%- style -%}
	{% render 'section-margin' %}

    #shopify-section-{{ section.id }} .collapsible-with-image_image-wrapper {
        width: {{ section.settings.image_width_desktop }}%;
        margin-left: auto;
        margin-right: auto;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    #shopify-section-{{ section.id }} .collapsible-with-image_image,
    #shopify-section-{{ section.id }} .collapsible-with-image_second {
        position: relative;
        overflow: hidden;
        flex-shrink: 0;
    }

    #shopify-section-{{ section.id }} .collapsible-with-image_image img,
    #shopify-section-{{ section.id }} .collapsible-with-image_image video,
    #shopify-section-{{ section.id }} .collapsible-with-image_second img,
    #shopify-section-{{ section.id }} .collapsible-with-image_second video,
    #shopify-section-{{ section.id }} .placeholder-svg {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: {{ section.settings.image_fit }};
        position: absolute;
        top: 0;
        left: 0;
    }

    @media screen and (max-width: 749px) {
        #shopify-section-{{ section.id }} .collapsible-with-image_image-wrapper {
            width: 100%;
            gap: 1.5rem;
        }

        #shopify-section-{{ section.id }} .collapsible-with-image_image,
        #shopify-section-{{ section.id }} .collapsible-with-image_second {
            /* Forcefully set the size of the image containers and prevent them from shrinking */
            width: {{ section.settings.image_width_mobile }}% !important;
            min-width: {{ section.settings.image_width_mobile }}% !important;
            flex-basis: {{ section.settings.image_width_mobile }}% !important;
            flex-shrink: 0 !important;
        }

        #shopify-section-{{ section.id }} .collapsible-with-image_content {
            /* Allow the text to grow and shrink to fill the available space */
            flex-grow: 1;
            flex-shrink: 1;
        }
    }
{%- endstyle -%}

<div class="collapsible-with-image color-{{ section.settings.color_scheme }} background">
	{% render 'section-header' %}
	<div class="container">
		<div class="collapsible-with-image_wrapper">
			{%- liquid
                assign desktop_vw = section.settings.image_width_desktop | divided_by: 2.0
                assign mobile_vw = section.settings.image_width_mobile
                assign image_sizes = "(max-width: 749px) " | append: mobile_vw | append: "vw, " | append: desktop_vw | append: "vw"
            -%}
			{%- for block in section.blocks -%}
				<div class="collapsible-with-image_item-wrapper">
					<div class="collapsible-with-image_image-wrapper">
						{%- liquid
                          assign image_one_aspect_ratio = '1 / 1'
                          if block.settings.video != blank
                            assign image_one_aspect_ratio = block.settings.video.aspect_ratio
                          elsif block.settings.image != blank
                            assign image_one_aspect_ratio = block.settings.image.aspect_ratio
                          endif

                          assign image_two_aspect_ratio = '1 / 1'
                          if block.settings.video_second != blank
                            assign image_two_aspect_ratio = block.settings.video_second.aspect_ratio
                          elsif block.settings.image_second != blank
                            assign image_two_aspect_ratio = block.settings.image_second.aspect_ratio
                          endif
                        -%}
						<div class="collapsible-with-image_image" style="aspect-ratio: {{ image_one_aspect_ratio }};">
							{%- if block.settings.video != blank -%}
								{{
									block.settings.video
									| video_tag:
										autoplay: true,
										loop: true,
										controls: false,
										muted: true
								}}
							{%- elsif block.settings.image != blank -%}
								{{
									block.settings.image
									| image_url: width: 3840
									| image_tag:
										loading: 'lazy',
										sizes: image_sizes,
										widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
								}}
							{%- else -%}
								{{
									'image'
									| placeholder_svg_tag: 'placeholder-svg placeholder'
								}}
							{%- endif -%}
						</div>
						<div class="collapsible-with-image_content">
							<div class="collapsible-with-image_top">
								<h2 class="collapsible-with-image_heading">
									{{ block.settings.heading }}
								</h2>
								<span class="collapsible-with-image_desc medium-font">
									{{- block.settings.description -}}
								</span>
							</div>
						</div>
						<div class="collapsible-with-image_second" style="aspect-ratio: {{ image_two_aspect_ratio }};">
							{%- if block.settings.video_second != blank -%}
								{{
									block.settings.video_second
									| video_tag:
										autoplay: true,
										loop: true,
										controls: false,
										muted: true
								}}
							{%- elsif block.settings.image_second != blank -%}
								{{
									block.settings.image_second
									| image_url: width: 3840
									| image_tag:
										loading: 'lazy',
										sizes: image_sizes,
										widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
								}}
							{%- else -%}
								{{
									'image'
									| placeholder_svg_tag: 'placeholder-svg placeholder'
								}}
							{%- endif -%}
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		{% if section.settings.section_header_type == 'type1'
			and section.settings.button_label != blank
		%}
			<div class="section-header_btn">
				{% render 'button', layout: section %}
			</div>
		{% endif %}
	</div>
</div>

