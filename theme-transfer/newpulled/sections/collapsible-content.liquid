      "type": "text-block",
      "name": "t:sections.collapsible-content.blocks.accordion.name",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "t:sections.collapsible-content.blocks.accordion.settings.heading.default",
          "label": "t:sections.all.heading.label"
        },
        {
          "type": "richtext",
