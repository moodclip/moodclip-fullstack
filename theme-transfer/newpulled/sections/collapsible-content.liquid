      "label": "t:sections.all.subheading.label"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "t:sections.collapsible-content.settings.heading.default",
      "label": "t:sections.all.heading.label"
    },
    {
      "type": "select",
      "id": "image_content_alignment",
      "label": "Image content alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "checkbox",
      "id": "text_animation",
      "default": true,
      "label": "t:sections.all.animations.label"
    },
    {
      "type": "richtext",
      "id": "description",
      "default": "t:sections.collapsible-content.settings.text.default",
      "label": "t:sections.all.description.label"
