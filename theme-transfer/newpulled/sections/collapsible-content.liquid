  "name": "t:sections.collapsible-content.name",
  "class": "collapsible-content-section",
  "tag": "section",
  "enabled_on": {
    "templates": ["*"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "faqs_heading",
      "label": "t:sections.all.heading.label"
    },
    {
      "type": "select",
      "id": "faqs_heading_alignment",
      "label": "Heading alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
