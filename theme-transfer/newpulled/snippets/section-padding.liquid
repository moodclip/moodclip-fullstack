.section-{{ section.id }}-padding {
{% if section.settings.padding_top == 'no-indent' %}
	padding-top: 0;
{% elsif section.settings.padding_top == 'l' %}
	padding-top: 6rem;
{% elsif section.settings.padding_top == 'm' %}
		padding-top: 4rem;
{% elsif section.settings.padding_top == 'xs' %}
	padding-top: 1.2rem;
{% else %}
	padding-top: 3rem;
{% endif %}

{% if section.settings.padding_bottom == 'no-indent' %}
	padding-bottom: 0;
{% elsif section.settings.padding_bottom == 'l' %}
	padding-bottom: 6rem;
{% elsif section.settings.padding_bottom == 'm' %}
	padding-bottom: 4rem;
{% elsif section.settings.padding_bottom == 'xs' %}
	padding-bottom: 1.2rem;
{% else %}
	padding-bottom: 3rem;
{% endif %}
}

@media screen and (min-width: 990px) { 
	.section-{{ section.id }}-padding {
		{% if section.settings.padding_top == 'no-indent' %}
			padding-top: 0;
		{% elsif section.settings.padding_top == 'l' %}
			padding-top: 8rem;
		{% elsif section.settings.padding_top == 'm' %}
			padding-top: 5.2rem;
		{% elsif section.settings.padding_top == 'xs' %}
			padding-top: 1.2rem;
		{% else %}
			padding-top: 3.2rem;
		{% endif %}

		{% if section.settings.padding_bottom == 'no-indent' %}
			padding-bottom: 0;
		{% elsif section.settings.padding_bottom == 'l' %}
			padding-bottom: 8rem;
		{% elsif section.settings.padding_bottom == 'm' %}
			padding-bottom: 5.2rem;
		{% elsif section.settings.padding_bottom == 'xs' %}
			padding-bottom: 1.2rem;
		{% else %}
			padding-bottom: 3.2rem;
		{% endif %}
	} 
}

@media screen and (min-width: 1200px) { 
	.section-{{ section.id }}-padding {
		{% if section.settings.padding_top == 'no-indent' %}
			padding-top: 0;
		{% elsif section.settings.padding_top == 'l' %}
			padding-top: 10rem;
		{% elsif section.settings.padding_top == 'm' %}
			padding-top: 6.4rem;
		{% elsif section.settings.padding_top == 's' %}
			padding-top: 3.2rem;
		{% elsif section.settings.padding_top == 'xs' %}
			padding-top: 1.2rem;
		{% else %}
			padding-top: 3.2rem;
		{% endif %}
		
		{% if section.settings.padding_bottom == 'no-indent' %}
			padding-bottom: 0;
		{% elsif section.settings.padding_bottom == 'l' %}
			padding-bottom: 10rem;
		{% elsif section.settings.padding_bottom == 'm' %}
			padding-bottom: 6.4rem;
		{% elsif section.settings.padding_bottom == 's' %}
			padding-bottom: 3.2rem;
		{% elsif section.settings.padding_bottom == 'xs' %}
			padding-bottom: 1.2rem;
		{% else %}
			padding-bottom: 3.2rem;
		{% endif %}
	} 
}

